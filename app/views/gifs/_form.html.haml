= form_for(@gif) do |f|
  - if @gif.errors.any?
    #error_explanation
      %h2
        = pluralize(@gif.errors.count, "error")
        prohibited this gif from being uploaded:
      %ul
        - @gif.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :category_id
    %br
    = f.select :category_id, content_tag(:option, 'Select one', value: nil) + options_from_collection_for_select(@categories, 'id', 'name')
  .field
    = f.label :image
    %br
    = f.file_field :image
  .actions
    = f.submit